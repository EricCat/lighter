doctype xml
feed(xmlns='http://www.w3.org/2005/Atom')
	title #{title}
	link(rel='self', href='/api/atom/feeds')
	link(href='#{url}')
	updated #{updated.toISOString()}
	id #{id}
	for post in posts
		entry(xmlns='http://www.w3.org/2005/Atom')
			title(type='html') #{post.title}
			link(rel='self', type='application/atom+xml', href='#{url}api/atom/entries/#{post._id}')
			link(href='#{url}#{post.permaLink}', type='text/html', rel='alternate')
			id #{url}#{post.permaLink}
			updated #{post.date.toISOString()}
			content(type='html') #{post.body}		
			author
				name #{post.author}
			